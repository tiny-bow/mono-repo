{
    "zig.zls.enabled": "on",
    "zig.buildOnSave": true,
    "zig.zls.buildOnSaveArgs": [
        "check"
    ],

    "nasm.outputFormat": "elf64",
    "nasm.extraFlags": [
        "-I zig-out/tmp"
    ],

    "files.readonlyInclude": {
        "**/zig-out/**": true,
        "**/.zig-cache/**": true,
        "**/.zvm/**": true,
    },

    // TODO: investigate further
    // there have been some issues with editorconfig lately, leaving this here for now
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    "cSpell.files": [
        "**.bb",
        "**.rml",
        "**.zig",
        "**.md",
        "**.json",
    ],
    "cSpell.ignorePaths": [
        ".zig-cache/**",
        "zig-out/**",
    ],
    "cSpell.words": [
        "anyerror",
        "anyframe",
        "anyopaque",
        "anytype",
        "bisearch",
        "bitcast",
        "builtinc",
        "callc",
        "callconv",
        "codegen",
        "codepoint",
        "Codepoints",
        "comptime",
        "deinit",
        "Deinitialize",
        "Deinitializes",
        "denormal",
        "disas",
        "endmacro",
        "errdefer",
        "foreignc",
        "GLbitfield",
        "glsl",
        "ifndef",
        "immediates",
        "impls",
        "interner",
        "interners",
        "ints",
        "isize",
        "lshift",
        "memcpy",
        "memset",
        "mmap",
        "mprotect",
        "munmap",
        "nasm",
        "nbsp",
        "noalias",
        "noreturn",
        "ofmt",
        "orelse",
        "Pointee",
        "powi",
        "prng",
        "punc",
        "realpath",
        "rema",
        "remb",
        "Repr",
        "rodata",
        "rshift",
        "signbit",
        "signedness",
        "syscall",
        "sysv",
        "texpr",
        "threadlocal",
        "Titlecase",
        "trunc",
        "uninit",
        "upvalue",
        "upvalues",
        "usize",
        "vmem",
        "VREG",
        "vregs",
        "vtable",
        "wasi",
        "wcwidth",
        "zimalloc",
        "zlfw"
    ],
}
